<div class="demo-card-wide mdl-card mdl-shadow--2dp material_container material_extend">
  <div class="mdl-card__title material_extend">
    <h1 class="mdl-card__title-text material_card_title">Registro de Empleados</h1>
  </div>
  <div class="mdl-card__supporting-text material_container ">
    <form method="POST" action={{method}} class=" material_extend material_container">

      {{!-- Name of the user --}}
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label material_extend material_input">
        <input class="mdl-textfield__input material_extend" type="text" name="name" id="name">
        <label class="mdl-textfield__label" for="name">Nombre completo</label>
      </div>

      {{!-- Email of the guest --}}
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label material_extend material_input">
        <input class="mdl-textfield__input material_extend" type="email" name="email" id="email">
        <label class="mdl-textfield__label" for="email">Email</label>
      </div>

      <div class="material_input_double_container material_extend">
        {{!-- Password of the user --}}
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label material_input_double material_input">
          <input class="mdl-textfield__input material_extend" type="password" onkeyup='check();' name="password"
            id="password">
          <label class="mdl-textfield__label" for="password">Contraseña</label>
        </div>

        {{!-- Confirm password of the user --}}
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label material_input_double material_input">
          <input class="mdl-textfield__input material_extend" type="password" onkeyup='check();' name="confirm_password"
            id="confirm_password">
          <label class="mdl-textfield__label" for="confirm_password">Confirmar Contraseña</label>
        </div>
      </div>

      <div class="material_input_double_container material_extend">

        {{!-- Position of the user --}}
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label material_input_double material_input">
          <input class="mdl-textfield__input material_extend" type="text" name="position" id="position">
          <label class="mdl-textfield__label" for="position">Posición en la Empresa</label>
        </div>

        {{!-- Office of the guest --}}
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label material_input_double material_input">
          <input class="mdl-textfield__input material_extend" type="text" name="office" id="office">
          <label class="mdl-textfield__label" for="office">Oficina</label>
        </div>

      </div>


      {{!-- Phone of the guest --}}
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label material_extend material_input">
        <input class="mdl-textfield__input material_extend" type="text" name="phone" id="phone">
        <label class="mdl-textfield__label" for="phone">Teléfono</label>
      </div>


      {{#if signUpMessage}}
      <div class="mdl-components__warning">
        <p>{{ signUpMessage }}</p>
      </div>
      {{/if}}

      <div class="mdl-components__warning valid_input" id="message_container">
        <h6>Las contraseñas no coinciden</h6>
      </div>



      <div class="mdl-card__actions mdl-card--border material_extend material_input material_container">
        <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" type="submit">
          Registrar Usuario
        </button>
      </div>
    </form>
  </div>