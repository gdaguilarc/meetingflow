<div class="col-md-8 order-md-1">
    <form method="POST" action="/signin">
        <div class="mb-3">
            <label for="email">Correo Electronico</label>
            <input type="email" class="form-control" id="email" placeholder="name@organizations.com" name="email"
                required>
            <div class="invalid-feedback">
                Please enter a valid email
            </div>
        </div>
        <div class="mb-3">
            <label for="password">Contrase√±a</label>
            <input type="password" class="form-control" id="password" onkeyup='check();' placeholder="****"
                name="password" required>
            <div class="invalid-feedback">
                Please enter a valid password
            </div>
        </div>

        <div class="mb-3">
            <div>
                <div class="alert alert-dismissible alert-light">
                    <strong>
                        <span id='message'>{{ signInMessage }}</span>
                    </strong>
                </div>
            </div>
        </div>
        <hr class="mb-4">
        <button id="register-button" class="btn btn-secondary btn-lg btn-info" type="submit">Ingresar</button>
    </form>
</div>