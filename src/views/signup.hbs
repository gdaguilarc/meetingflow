<div class="col-md-8 order-md-1">
  <form method="POST" action={{method}}>
    <div class="mb-3">
      <label for="name">Nombre Completo</label>
      <input type="text" class="form-control" id="name" placeholder="Alfredo Pérez" name="name" required>
      <div class="invalid-feedback">
        Por favor ingresa un nombre valido
      </div>
    </div>
    <div class="mb-3">
      <label for="email">Correo Electronico</label>
      <input type="email" class="form-control" id="email" placeholder="name@organizations.com" name="email" required>
      <div class="invalid-feedback">
        Por favor ingresa un correo valido
      </div>
    </div>
    <div class="mb-3">
      <label for="password">Contraseña</label>
      <input type="password" class="form-control" id="password" onkeyup='check();' placeholder="****" name="password"
        required>
      <div class="invalid-feedback">
        Por favor ingresa una contraseña valida
      </div>
    </div>
    <div class="mb-3">
      <label for="password">Confirmar Contraseña</label>
      <input type="password" class="form-control" id="confirm_password" onkeyup='check();' placeholder="****" required>
      <div class="invalid-feedback">
        Las contraseñas no coinciden.
      </div>
    </div>
    <div class="mb-3">
      <label for="position">Posición en la empresa</label>
      <input type="position" class="form-control" id="position" placeholder="Desarrollador" name="position" required>
      <div class="invalid-feedback">
        Por favor ingresa una posición valida
      </div>
    </div>
    <div class="mb-3">
      <label for="office">Oficina</label>
      <input type="text" class="form-control" id="office" placeholder="Ejercito Nacional" name="office" required>
      <div class="invalid-feedback">
        Por favor ingresa una oficina valida
      </div>
    </div>
    <div class="mb-3">
      <label for="phone">Teléfono</label>
      <input type="text" class="form-control" id="phone" placeholder="55 17 81 29 55" name="phone" required>
      <div class="invalid-feedback">
        Por favor ingresa un teléfono valido
      </div>
    </div>
    <div class="mb-3">
      <div>
        <div class="alert alert-dismissible alert-light">
          <strong>
            <span id='message'>{{ signUpMessage }}</span>
          </strong>
        </div>
      </div>
    </div>
    <hr class="mb-4">
    <button id="register-button" class="btn btn-outline-primary btn-lg btn-block" type="submit">Registrar
      Usuario</button>
  </form>
</div>